# ============================================================================
# VETRA UI - Environment Variables Configuration
# ============================================================================
# This file contains all configurable environment variables for Vetra UI.
# Copy this file to .env and customize the values for your deployment.
#
# All NEXT_PUBLIC_* variables are exposed to the browser.
# Non-prefixed variables are server-side only.
# ============================================================================

# ----------------------------------------------------------------------------
# CORE CONFIGURATION
# ----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000

# ----------------------------------------------------------------------------
# SITE METADATA
# ----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_NAME=Vetra UI
NEXT_PUBLIC_SITE_URL=https://vetra.kmuc.online
NEXT_PUBLIC_SITE_DESCRIPTION=UI Library for Design Engineers

# ----------------------------------------------------------------------------
# HERO SECTION
# ----------------------------------------------------------------------------
NEXT_PUBLIC_HERO_HEADLINE=Vetra UI is the new way to build landing pages.
NEXT_PUBLIC_HERO_SUBHEADLINE=Craft immersive marketing sites in hours, not weeks. Vetra stitches together motion, glassmorphism, and systemized components for teams who care about polish.
NEXT_PUBLIC_HERO_CTA_TEXT=View on GitHub
NEXT_PUBLIC_HERO_CTA_LINK=https://github.com/kmucdigital/vetra-ui

# ----------------------------------------------------------------------------
# THEME CUSTOMIZATION (HSL Format: "hue saturation% lightness%")
# ----------------------------------------------------------------------------
# Example HSL colors:
# - White: "0 0% 98%"
# - Purple: "139 92% 75%"
# - Dark: "0 0% 10%"
# Leave empty to use default theme colors
NEXT_PUBLIC_PRIMARY_COLOR=
NEXT_PUBLIC_ACCENT_COLOR=
NEXT_PUBLIC_BACKGROUND_COLOR=
NEXT_PUBLIC_FOREGROUND_COLOR=
NEXT_PUBLIC_FONT_FAMILY=

# ----------------------------------------------------------------------------
# TRUSTED BY SECTION
# ----------------------------------------------------------------------------
NEXT_PUBLIC_TRUSTED_BY_TITLE=TRUSTED BY TEAMS FROM AROUND THE WORLD

# ----------------------------------------------------------------------------
# PRICING SECTION
# ----------------------------------------------------------------------------
NEXT_PUBLIC_PRICING_HEADLINE=Simple pricing for everyone
NEXT_PUBLIC_PRICING_SUBHEADLINE=Choose the perfect plan for your needs

# ----------------------------------------------------------------------------
# CTA SECTION
# ----------------------------------------------------------------------------
NEXT_PUBLIC_CTA_HEADLINE=Ready to start your project?
NEXT_PUBLIC_CTA_SUBHEADLINE=Get started with Vetra UI today. Free, open source, and ready to customize.
NEXT_PUBLIC_CTA_BUTTON_TEXT=Download Template
NEXT_PUBLIC_CTA_BUTTON_HREF=https://github.com/kmucdigital/vetra-ui

# ----------------------------------------------------------------------------
# ANALYTICS INTEGRATION
# ----------------------------------------------------------------------------
# Google Analytics 4 Measurement ID (e.g., G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID=

# Plausible Analytics Domain (e.g., vetra.kmuc.online)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Enable/disable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
# Enable contact form functionality
NEXT_PUBLIC_ENABLE_CONTACT_FORM=false

# Enable internationalization support
NEXT_PUBLIC_ENABLE_I18N=false

# ----------------------------------------------------------------------------
# EXTERNAL LINKS
# ----------------------------------------------------------------------------
NEXT_PUBLIC_GITHUB_URL=https://github.com/kmucdigital/vetra-ui
NEXT_PUBLIC_COMPANY_WEBSITE=https://kmuc.online
NEXT_PUBLIC_IMPRESSUM_URL=https://kmuc.online/impressum
NEXT_PUBLIC_DATENSCHUTZ_URL=https://kmuc.online/datenschutz

# ----------------------------------------------------------------------------
# LAUNCH CONFIGURATION
# ----------------------------------------------------------------------------
NEXT_PUBLIC_LAUNCH_DATE=2025-11-20T00:00:00+01:00
NEXT_PUBLIC_LAUNCH_LABEL=Launching 20.11.2025

# ============================================================================
# DEVELOPMENT NOTES
# ============================================================================
# 1. After modifying this file, restart your development server
# 2. Only NEXT_PUBLIC_* variables are accessible in browser/client code
# 3. All variables are validated via Zod schema at build time
# 4. Invalid configurations will fail the build with clear error messages
# 5. Use scripts/generate-env.js to create .env from this template
# ============================================================================

  "repository": {
    "type": "git",
    "url": "https://github.com/kmucdigital/vetra-ui"
  },
  "bugs": {
    "url": "https://github.com/kmucdigital/vetra-ui/issues"
  },
  "homepage": "https://github.com/kmucdigital/vetra-ui#readme",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "kmuc-dev-cli": "^2.1.1",
    "lucide-react": "^0.428.0",
    "next": "16.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
